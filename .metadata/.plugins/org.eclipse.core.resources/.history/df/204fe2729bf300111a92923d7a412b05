package IOStream;

import java.io.IOException;
import java.io.InputStream;
import java.io.ObjectInputStream;
import java.net.Socket;
import java.util.Vector;
import Data.PayloadData;

public class PayloadObjectRX 
{
	public Vector<PayloadData> payloadDataVector;
	private  ObjectInputStream objectInputStream; 
	public Socket socket;
	
	public PayloadObjectRX(Socket _socket)
	{
		socket = _socket;
	}
	
	public   Vector<PayloadData> getPayloadObject()	
	{
		try 
		{
			InputStream inputStream = socket.getInputStream();
			objectInputStream = new ObjectInputStream(inputStream);
			
			try 
			{
				Object updatePayloadData = 	(PayloadData) objectInputStream.readUnshared();
				payloadDataVector.addElement((PayloadData) updatePayloadData);
			} 
			catch (ClassNotFoundException e) 
			{
				e.printStackTrace();
			}
			
	    } 
		catch (IOException e) 
		{
			e.printStackTrace();
		}
		return payloadDataVector;
	}
}
